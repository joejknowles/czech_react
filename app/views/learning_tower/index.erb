<% if @sentences.any? %>
  <%= content_tag 'div', '', id: 'high-tower', class: 'col-md-4 top-half' %>
  <%= content_tag 'div', '', id: 'answer-tower', class: 'col-md-8 top-half' %>
  <%= content_tag 'div', id: 'low-tower', class: 'col-md-4' do %>
    <%= render partial: 'partials/question_tower', locals: { sentences: @sentences } %>
  <% end %>
  <%= content_tag 'div', class: 'col-md-8' do %>
    <%= render partial: 'partials/answer_form', locals: { sentence: @first_sentence } %>
    <%= content_tag 'div', '', id: 'user-message' %>
  <% end %>
<% else %>
  There are no words.
<% end %>

<script type="text/babel">

  ReactDOM.render(
    <h1>Hello, world!</h1>,
    document.getElementById('answer-form')
  );
</script>