<%= form_tag("/api/check_answer", id: 'answer-form',method: 'post', remote: true) do %>
  <%= label_tag(:answer, "Enter answer:", hidden: 'hidden') %>
  <%= text_field_tag(:answer,'', placeholder: 'You know this!', autofocus: true, autocomplete: 'off') %>
  <%= hidden_field_tag(:sentence_id, sentence.id) %>
  <%= hidden_field_tag(:attempt, 1) %>
  <%= submit_tag("Check") %>
<% end %>